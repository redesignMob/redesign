<config>
    <modules>
        <Redesign_Material>
            <version>0.1.0</version>
        </Redesign_Material>
    </modules>
    <frontend>
        <routers>
            <material>
                <use>standard</use>
                <args>
                    <module>Redesign_Material</module>
                    <frontName>material</frontName>
                </args>
            </material>
        </routers>
        <layout>
            <updates>
                <material>
                    <file>material.xml</file>
                </material>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<material>
				<use>admin</use>
				<args>
					<module>Redesign_Material</module>
					<frontName>material</frontName>
				</args>
			</material>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<material module="material">
				<title>Materiale</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="material">
						<title>Administrare materiale</title>
						<sort_order>0</sort_order>
						<action>material/adminhtml_material</action>
					</items>
				</children>
			</material>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Redesign_Material>
							<title>Material Module</title>
							<sort_order>10</sort_order>
						</Redesign_Material>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<material>
					<file>material.xml</file>
				</material>
			</updates>
		</layout>
                <events>
                    <catalog_product_save_after>
                        <observers>
                            <material_save_product_data>
                                <type>singleton</type>
                                <class>material/observer</class>
                                <method>saveProductTabData</method>
                            </material_save_product_data>
                        </observers>
                    </catalog_product_save_after>
                </events>
    </adminhtml>   
    <global>
        <models>
            <material>
                <class>Redesign_Material_Model</class>
                <resourceModel>material_mysql4</resourceModel>
            </material>
            <material_mysql4>
                <class>Redesign_Material_Model_Mysql4</class>
                <entities>
                    <material>
                        <table>material</table>
                    </material>
                </entities>
            </material_mysql4>
        </models>
        <events>
            <sales_order_place_after>
                <observers>
                    <material_observer>
                        <type>singleton</type>
                        <class>Redesign_Material_Model_Observer</class>
                        <method>processMaterialsStock</method>
                    </material_observer>
                </observers>
            </sales_order_place_after>
        </events>
        <resources>
            <material_setup>
                <setup>
                    <module>Redesign_Material</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </material_setup>
            <material_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </material_write>
            <material_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </material_read>
        </resources>
        <blocks>
            <material>
                <class>Redesign_Material_Block</class>
            </material>
        </blocks>
        <helpers>
            <material>
                <class>Redesign_Material_Helper</class>
            </material>
        </helpers>
    </global>
</config>